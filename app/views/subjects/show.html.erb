<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>
<%= csrf_meta_tag %>

<div class="subject show">
    <h2>Show subject</h2>

    <table summary="Subject Detail View">
    <tr>
        <th>Name</th>
        <td><%= @subject.name %></td>
    </tr>
    <tr>
        <th>Position</th>
        <td><%= @subject.position %></td>
    </tr>
    <tr>
        <th>Visible?</th>
        <td><%= @subject.visible %></td>
    </tr>
    <tr>
        <th>Created</th>
        <td><%= @subject.created_at.to_s(:short) %></td>
    </tr>
    <tr>
        <th>Updated</th>
        <td id="updated-at"><%= @subject.updated_at %></td>
    </tr>
    </table>

    <%= link_to 'Publish', publish_subject_path(@subject), method: :patch, remote: true, data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>Updating..." } %>
</div>