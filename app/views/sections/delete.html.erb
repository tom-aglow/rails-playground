<%= link_to('<< Back to List', subjects_path, :class => 'back-link') %>

<div class="section delete">
    <h2>Delete section</h2>

    <%= form_for(@section, :method => 'delete') do |f| %>

        <p>Are you sure that you want to permanently delete this section?</p>

        <p class="reference-name"><%= f.object.name %></p>

        <%= f.submit('Delete section') %>
    <% end %>
</div>
