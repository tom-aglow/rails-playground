<label for="section_name">Name</label>
<%= f.text_field(:name) %>

<label for="section_position">Position</label>
<%= f.select(:position, 1..@section_count) %>

<label for="section_page_id">Page</label>
<%= f.select(:page_id, @pages.map {|p| [p.name, p.id]}) %>


<label for="section_visible">Visible</label>
<%= f.check_box(:visible) %>

<label for="section_content_type">Content type</label>
<%= f.radio_button(:content_type, 'text') %> Text
<%= f.radio_button(:content_type, 'HTML') %> HTML

<label for="section_content">Content</label>
<%= f.text_area(:content, :size => '40x10') %>