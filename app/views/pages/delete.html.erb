<%= link_to('<< Back to List', subjects_path, :class => 'back-link') %>

<div class="page delete">
    <h2>Delete page</h2>

    <%= form_for(@page, :method => 'delete') do |f| %>

        <p>Are you sure that you want to permanently delete this page?</p>

        <p class="reference-name"><%= f.object.name %></p>

        <%= f.submit('Delete page') %>
    <% end %>
</div>
