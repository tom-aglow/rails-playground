<%= link_to("<< Back to List", pages_path(subject_id: @subject.id), :class => 'back-link') %>

<div class="page show">
    <h2>Show page</h2>

    <table summary="Page Detail View">
        <tr>
            <th>Name</th>
            <td><%= @page.name %></td>
        </tr>
        <tr>
            <th>Permalink</th>
            <td><%= @page.permalink %></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @page.position %></td>
        </tr>
        <tr>
            <th>Subject ID</th>
            <td><%= @page.subject_id %></td>
        </tr>
        <tr>
            <th>Visible?</th>
            <td><%= @page.visible %></td>
        </tr>
        <tr>
            <th>Created</th>
            <td><%= @page.created_at.to_s(:short) %></td>
        </tr>
        <tr>
            <th>Updated</th>
            <td><%= @page.updated_at.to_s(:short) %></td>
        </tr>
    </table>
</div>