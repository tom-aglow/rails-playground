<% unless flash[:error].blank? %>
    <div class="notice">
        <%= flash[:error] %>
    </div>
<% end %>

<%= link_to('<< Back to List', pages_path, :class => 'back-link') %>

<div class="page edit">
    <h2>Edit page</h2>

    <%= form_for(@page) do |f| %>

        <label for="page_name">Name</label>
        <%= f.text_field(:name) %>

        <label for="page_permalink">Permalink</label>
        <%= f.text_field(:permalink) %>

        <label for="page_position">Position</label>
        <%= f.text_field(:position) %>

        <label for="page_subject_id">Subject ID</label>
        <%= f.text_field(:subject_id) %>

        <label for="page_visible">Visible</label>
        <%= f.text_field(:visible) %>

        <%= f.submit('Update page') %>
    <% end %>
</div>
