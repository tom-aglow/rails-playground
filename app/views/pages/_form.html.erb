<label for="page_name">Name</label>
<%= f.text_field(:name) %>

<label for="page_permalink">Permalink</label>
<%= f.text_field(:permalink) %>

<label for="page_position">Position</label>
<%= f.select(:position, 1..@page_count) %>

<label for="page_subject_id">Subject</label>
<%= f.select(:subject_id, @subjects.map {|s| [s.name, s.id]}) %>

<label for="page_visible">Visible</label>
<%= f.check_box(:visible) %>